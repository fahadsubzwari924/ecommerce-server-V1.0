{
  "name": "BLE-Server",
  "version": "0.0.1",
  "description": "Project By UTF-LABS",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf -rf build && mkdir build",
    "build": "babel src -d build && npm run build:copy",
    "build:copy": "cp src/conf/config.ini build/conf/config.ini && cp -r src/static build/",
    "build:deploy": "npm run clean && npm run build && pm2 start build/index.js",
    "start": "nodemon src/index.js --exec babel-node --presets env"
  },
  "author": "bilal.ali@utf-labs.com",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^4.4.2",
    "babel-preset-env": "^1.6.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "cryptr": "^4.0.2",
    "express": "^4.16.2",
    "express-subdomain": "^1.0.5",
    "htmltopdf": "0.0.8",
    "ini": "^1.3.5",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "mongodb": "^3.0.0-rc0",
    "mongoose": "^5.4.0",
    "mqtt": "^2.18.8",
    "mqtt-client": "^0.1.0",
    "multer": "^1.4.1",
    "mysql2": "^1.5.1",
    "nodemailer": "^4.7.0",
    "raven": "^2.6.4",
    "save-dev": "^2.0.0",
    "sequelize": "^4.27.0",
    "vhost": "^3.0.2"
  },
  "devDependencies": {
